<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tvIntroducirUsuario"
        android:id="@+id/tvUsuario"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/etUsuario"
        android:layout_alignStart="@+id/etUsuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/etUsuario"
        android:hint="Usuario"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvUsuario"
        android:layout_alignLeft="@+id/etContraseña"
        android:layout_alignStart="@+id/etContraseña" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tvContraseña"
        android:id="@+id/tvContraseña"
        android:layout_below="@+id/etUsuario"
        android:layout_alignLeft="@+id/etUsuario"
        android:layout_alignStart="@+id/etUsuario"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etContraseña"
        android:hint="Contraseña"
        android:password="false"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tvContraseña"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btInicioSesión"
        android:id="@+id/btInicioSesión"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/etContraseña"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
